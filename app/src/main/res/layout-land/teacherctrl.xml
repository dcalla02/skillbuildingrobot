<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="260dp">

        <ImageView
            android:id="@+id/placemat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/skillbuildingrobot_placemat" />

        <ImageView
            android:id="@+id/knife"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_marginEnd="92dp"
            android:layout_marginRight="92dp"
            app:srcCompat="@drawable/skillbuildingrobot_knife"
            android:layout_alignBottom="@+id/fork"
            android:layout_alignRight="@+id/plate"
            android:layout_alignEnd="@+id/plate" />

        <ImageView
            android:id="@+id/spoon"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp"
            app:srcCompat="@drawable/skillbuildingrobot_spoon"
            android:layout_alignBottom="@+id/knife"
            android:layout_alignLeft="@+id/knife"
            android:layout_alignStart="@+id/knife" />

        <ImageView
            android:id="@+id/plate"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginLeft="74dp"
            android:layout_marginStart="74dp"
            app:srcCompat="@drawable/skillbuildingrobot_plate"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="7dp" />

        <ImageView
            android:id="@+id/fork"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_marginLeft="86dp"
            android:layout_marginStart="86dp"
            app:srcCompat="@drawable/skillbuildingrobot_fork"
            android:layout_marginBottom="17dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/plate"
            android:layout_alignStart="@+id/plate" />

        <ImageView
            android:id="@+id/cup"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            app:srcCompat="@drawable/skillbuildingrobot_cup"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></RelativeLayout>


</LinearLayout>