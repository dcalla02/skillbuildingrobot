<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place the spoon to the right of the knife."
        android:textSize="24sp"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/step_number"
        android:layout_toEndOf="@+id/step_number" />

    <TextView
        android:id="@+id/step_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step #:"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/placemat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/skillbuildingrobot_placemat"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/test"
            android:layout_alignStart="@+id/test"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp" />

        <ImageView
            android:id="@+id/plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/skillbuildingrobot_plate" />

        <Button
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="Toggle Plate"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></RelativeLayout>

</LinearLayout>