<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place the spoon to the right of the knife."
        android:textSize="24sp"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/step_number"
        android:layout_toEndOf="@+id/step_number" />

    <TextView
        android:id="@+id/step_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step #:"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/placemat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/skillbuildingrobot_placemat"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/test"
            android:layout_alignStart="@+id/test"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp" />

        <ImageView
            android:id="@+id/plate"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_align="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"

            app:srcCompat="@drawable/skillbuildingrobot_plate" />

        <ImageView
            android:id="@+id/fork"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            app:srcCompat="@drawable/skillbuildingrobot_fork"
            android:layout_alignBottom="@+id/plate"
            android:layout_toRightOf="@+id/btn-fork"
            android:layout_toEndOf="@+id/btn-fork"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp" />

        <ImageView
            android:id="@+id/spoon"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            app:srcCompat="@drawable/skillbuildingrobot_spoon"

            android:layout_marginLeft="30dp"
            android:layout_alignBottom="@+id/knife"
            android:layout_alignLeft="@+id/knife"
            android:layout_alignStart="@+id/knife"
            android:layout_marginStart="30dp" />

        <ImageView
            android:id="@+id/knife"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_marginEnd="148dp"
            android:layout_marginRight="148dp"
            app:srcCompat="@drawable/skillbuildingrobot_knife"
            android:layout_alignBottom="@+id/plate"
            android:layout_alignRight="@+id/plate"
            android:layout_alignEnd="@+id/plate" />

        <Button
            android:id="@+id/btn-plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plate"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/placemat"
            android:layout_alignStart="@+id/placemat" />

        <Button
            android:id="@+id/btn-fork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fork"
            android:layout_below="@+id/btn-plate"
            android:layout_alignLeft="@+id/placemat"
            android:layout_alignStart="@+id/placemat" />

        <Button
            android:id="@+id/btn-knife"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Knife"
            android:layout_below="@+id/btn-fork"
            android:layout_alignLeft="@+id/placemat"
            android:layout_alignStart="@+id/placemat" />

        <Button
            android:id="@+id/btn-spoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Spoon"
            android:layout_below="@+id/btn-knife"
            android:layout_alignLeft="@+id/placemat"
            android:layout_alignStart="@+id/placemat" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></RelativeLayout>

</LinearLayout>